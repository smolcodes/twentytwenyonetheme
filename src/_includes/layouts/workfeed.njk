{% extends "layouts/base.njk" %}
 {% set pageHeaderTitle = title %}
 {% set pageHeaderImage = imageURL %}
 {% set pageHeaderSummary = summary %}
{% block content %}
     <section class="flex flex-wrap justify-between pt-12 -mx-6 ">
         {% for item in collections.work %}
        <article class="w-full md:w-1/2 p-6 flex flex-col flex-grow flex-shrink">
						<div class="flex-1 bg-red-50 rounded-t rounded-b-none overflow-hidden shadow-md pb-5">
							<div class="flex flex-wrap no-underline hover:no-underline">
              {% if item.data.imageURL %}
         <div class="mx-auto" style="max-height: 300px; overflow-y: hidden;">
           <img src="{{ item.data.imageURL }}" class="mx-auto pb-6" style="width: 100%; max-width: 100%; height: auto; display: block; margin-left: auto; margin-right: auto;" alt="post image"> 
           </div>
            {% endif %}
            <div class="w-full px-10 pt-5">
          <h2 class="w-full"><a class="text-4xl font-bold font-serif text-red-400" href="{{ item.url }}">{{ item.data.title }}</a></h2>
          <p  class="text-gray-800 font-serif text-base mb-5">{{ item.data.summary }}</p>
          <a class="bg-yellow-100 p-2 hover:bg-yellow-300 mb-4"href="{{ item.url }}">Read ðŸ‘‰</a>
     </div>
 </div>
 </div>
 </article>
        {% endfor %}
           </section>
{% endblock %}

